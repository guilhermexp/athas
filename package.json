{
  "name": "athas-code",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "tauri": "tauri",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "check": "biome check",
    "lint": "bun check --write",
    "fix": "bun check --write",
    "format": "bun check --write",
    "check:all": "bun typecheck && bun lint",
    "check:fix": "biome check --write --unsafe",
    "clean": "concurrently --names \"node,rust\" --prefix-colors \"cyan,yellow\" \"rimraf dist build node_modules bun.lockb && bun install\" \"cargo clean && cargo build\"",
    "prepare": "simple-git-hooks",
    "commitlint": "commitlint",
    "setup": "bun setup.ts",
    "dev": "bun run tauri dev"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@headlessui/react": "^2.2.7",
    "@tanstack/react-virtual": "^3.13.12",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-clipboard-manager": "~2.3.0",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-fs": "^2",
    "@tauri-apps/plugin-opener": "^2.4.0",
    "@tauri-apps/plugin-os": "^2",
    "@tauri-apps/plugin-process": "^2",
    "@tauri-apps/plugin-shell": "^2.3.0",
    "@tauri-apps/plugin-store": "~2",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "@types/prismjs": "^1.26.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@xterm/addon-canvas": "^0.7.0",
    "@xterm/addon-clipboard": "^0.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-serialize": "^0.13.0",
    "@xterm/addon-unicode11": "^0.8.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "fast-deep-equal": "^3.1.3",
    "handlebars": "^4.7.8",
    "ignore": "^7.0.5",
    "immer": "^10.1.1",
    "lucide-react": "^0.525.0",
    "material-file-icons": "^2.4.0",
    "prismjs": "^1.30.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-intersection-observer": "^9.16.0",
    "react-markdown": "^10.1.0",
    "react-scan": "^0.4.3",
    "react-syntax-highlighter": "^15.6.6",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "use-debounce": "^10.0.5",
    "use-sync-external-store": "^1.5.0",
    "usehooks-ts": "^3.1.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@commitlint/cli": "^19.8.1",
    "@tailwindcss/vite": "^4.1.11",
    "@tauri-apps/cli": "^2",
    "@types/bun": "^1.2.21",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "code-inspector-plugin": "^1.0.4",
    "concurrently": "^9.2.0",
    "lint-staged": "^16.1.5",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "typescript-language-server": "^4.3.4",
    "vite": "^7.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged",
    "pre-push": "bun check:all",
    "commit-msg": "bun commitlint --edit $1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": "biome check --no-errors-on-unmatched",
    "*.rs": "cargo fmt --all -- --check"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
