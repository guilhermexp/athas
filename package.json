{
  "name": "athas-code",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:web": "tsc && vite build",
    "build:tauri": "tauri build",
    "preview": "vite preview",
    "tauri": "tauri",
    "format": "biome format --write",
    "format:check": "biome format",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "lint:staged": "lint-staged",
    "check": "bun run typecheck && biome check",
    "fix": "biome check --write",
    "clean": "rm -rf dist build node_modules/.vite",
    "clean:all": "rm -rf dist build node_modules bun.lockb && bun install",
    "commitlint": "commitlint --edit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.5.0",
    "@tauri-apps/plugin-dialog": "^2.2.2",
    "@tauri-apps/plugin-fs": "^2.3.0",
    "@tauri-apps/plugin-http": "^2.4.4",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-os": "^2.2.1",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-window-state": "~2",
    "@types/prismjs": "^1.26.5",
    "ansi-to-html": "^0.7.2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tailwindcss/vite": "^4.1.8",
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.0",
    "lint-staged": "^16.1.2",
    "simple-git-hooks": "^2.13.0",
    "tailwindcss": "^4.1.8",
    "typescript": "~5.6.2",
    "vite": "^6.3.5"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx concurrently './scripts/format-staged-rust.sh' './scripts/format-staged-biome.sh && bun run lint:staged'",
    "commit-msg": "bun commitlint --edit $1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome lint --no-errors-on-unmatched"
    ]
  }
}
